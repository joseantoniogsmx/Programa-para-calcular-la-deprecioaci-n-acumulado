#include <stdio.h>

int main() {
    float Costo, Valor_Recuperacion, Depreciacion, Valor_Actual, Acumulado;
    int Año, Vida_Util;

    // Entrada de datos
    printf("Introduzca costo, valor recuperación y vida útil: ");
    scanf("%f %f %d", &Costo, &Valor_Recuperacion, &Vida_Util);
    printf("Introduzca año actual: ");
    scanf("%d", &Año);

    Valor_Actual = Costo;
    Depreciacion = (Costo - Valor_Recuperacion) / Vida_Util;
    Acumulado = 0;

    // Salida de encabezados
    printf("Año\tDepreciacion\tAcumulada\n");

    // Bucle de depreciación
    while (Año < Vida_Util) {
        Acumulado += Depreciacion;
        Valor_Actual -= Depreciacion;
        printf("%d\t%.2f\t\t%.2f\n", Año, Depreciacion, Acumulado);
        Año += 1;
    }

    return 0;
}
